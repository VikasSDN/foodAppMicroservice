{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/Serilog_.txt",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName"
    ],
    "Properties": {
      "ApplicationName": "Food App ApiGateway 1.0"
    }
  },
  // Configuration for the Reverse Proxy
  "ReverseProxy": {
    "Routes": {
      "get-order": {
        "ClusterId": "order-service",
        "Match": {
          "Path": "/weatherforecast/",
          "Methods": [
            "GET"
          ]
        },
        // "Transforms": [
        //   {
        //     "RequestHeader": "X-Forwarded-For"
        //   }
        // ]
      }
    },
    "Clusters": {
      "restaurant-service": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:7094"
          }
        }
      },
      "order-service": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:7264"
          }
        }
      },
      "delivery-service": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:7194"
          }
        }
      }
    },
    // "LoadBalancingPolicy": "PowerOfTwoChoices",
    "HealthCheck": {
      "Active": {
        "Enabled": true,
        "Path": "/health",
        "Interval": "00:00:30",
        "Timeout": "00:00:05",
        "Policy": "RoundRobin"
      },
      "Passive": {
        "Enabled": true,
        "Policy": "RoundRobin"
      }
    }
  }
}